@model IEnumerable<Assgn2.AssetTracking.Presentation.Models.AssetViewModel>

@{
    ViewData["Title"] = "Asset List";
}
<br />
<h1>List of Assets</h1>
<br />


<table class="table">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TagNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssetType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialNumber)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TagNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssetType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNumber)
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

@*@Html.ActionLink("Search Assets", "Search")*@

<a href="~/Assets/Search" class="btn btn-info btn-lg active" role="button" aria-pressed="true">Search for Assets</a>